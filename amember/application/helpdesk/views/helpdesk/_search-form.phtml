<div class="am-block">
    <div>
        <form action="<?php p(REL_ROOT_URL) ?>/helpdesk/faq/search" method="get" id="helpdesk-search">
            <input class="am-helpdesk-faq-q el-wide" id="am-helpdesk-faq-q" type="text" name="q" value="" placeholder="<?php __e('Type a keyword to search in FAQ') ?>" />
        </form>
    </div>
    <div id="am-helpdesk-faq-q-result" class="am-helpdesk-faq-q-result">
    </div>
</div>
<script type="text/javascript">
$(document).on('keyup','#am-helpdesk-faq-q', function(){
   if ($(this).val().length <= 3) {
       $("#am-helpdesk-faq-q-result").empty();
       return;
   }
   $.get($(this).closest('form').attr('action'), {q:$(this).val()}, function(html){
       $("#am-helpdesk-faq-q-result").empty().append(html);
   })
   return false;
})

$('#helpdesk-search').bind("keyup keypress", function(e) {
  var code = e.keyCode || e.which; 
  if (code  == 13) {               
    e.preventDefault();
    return false;
  }
});
</script>