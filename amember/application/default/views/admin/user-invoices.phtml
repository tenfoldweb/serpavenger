$(function(){

function convertDate(val){
    if(val == 'Recurring')
        return '<?php echo Am_Period::RECURRING_SQL_DATE;?>';
    if(val == 'Lifetime')
        return '<?php echo Am_Period::MAX_SQL_DATE;?>';
